<UserControl x:Class="MidiSurface.Controls.ChannelStripControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:MidiSurface.Controls"
             MinWidth="80" MinHeight="150">

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="3" Padding="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="{Binding ChannelName}"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="1" Grid.Column="0"
                        HorizontalAlignment="Center">
                <c:KnobControl
                    MinHeight="45" MinWidth="30"
                    Width="Auto" Height="Auto"
                    Minimum="{Binding Knob.Minimum}"
                    Maximum="{Binding Knob.Maximum}"
                    Value="{Binding Knob.Value, Mode=TwoWay}"
                    Label="{Binding Knob.Label}"
                    Channel="{Binding Knob.Channel}"
                    CCNumber="{Binding Knob.CCNumber}"
                    Margin="0,0,0,10"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch">
                <c:FaderControl
                    Width="Auto" Height="Auto"
                    Minimum="{Binding Fader.Minimum}"
                    Maximum="{Binding Fader.Maximum}"
                    Value="{Binding Fader.Value, Mode=TwoWay}"
                    Label="{Binding Fader.Label}"
                    Channel="{Binding Fader.Channel}"
                    Margin="0,0,0,20"/>
            </StackPanel>

            <ItemsControl Grid.Row="2" Grid.Column="1"
              ItemsSource="{Binding Buttons}"
              VerticalAlignment="Bottom"
              HorizontalAlignment="Center"
              Margin="0,0,0,55">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <c:ButtonControl 
                            Label="{Binding Label}"
                            BtnContent="{Binding BtnContent}"
                            IsLit="{Binding IsLit}"
                            Channel="{Binding Channel}"
                            Note="{Binding Note}"
                            Margin="0,0,0,5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>