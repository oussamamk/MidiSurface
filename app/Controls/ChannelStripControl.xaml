<UserControl x:Class="MidiSurface.Controls.ChannelStripControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:MidiSurface.Controls"
             MinHeight="150"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch" MinWidth="80">

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0" Padding="5">
        <!-- Clip content to prevent overflow -->
        <Grid ClipToBounds="True" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Main content takes all space -->
                <ColumnDefinition Width="Auto"/>
                <!-- Buttons take minimal space -->
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Channel Name - spans both columns, centered -->
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                       Text="{Binding ChannelName}"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Left"
                       TextTrimming="CharacterEllipsis"
                       MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=ActualWidth}" />

            <!-- Knob - spans both columns, centered -->
            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                        HorizontalAlignment="Left" Margin="5,5,0,0">
                <c:KnobControl
                    MinHeight="45" MinWidth="30"
                    Width="Auto" Height="Auto"
                    Minimum="{Binding Knob.Minimum}"
                    Maximum="{Binding Knob.Maximum}"
                    Value="{Binding Knob.Value, Mode=TwoWay}"
                    Label="{Binding Knob.Label}"
                    Channel="{Binding Knob.Channel}"
                    CCNumber="{Binding Knob.CCNumber}"
                    Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Fader - in main column only -->
            <StackPanel Grid.Row="2" Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch" Margin="5,0,0,0">
                <c:FaderControl
                    Width="Auto" Height="Auto"
                    Minimum="{Binding Fader.Minimum}"
                    Maximum="{Binding Fader.Maximum}"
                    Value="{Binding Fader.Value, Mode=TwoWay}"
                    Label="{Binding Fader.Label}"
                    Channel="{Binding Fader.Channel}"
                    Margin="0,0,0,20"/>
            </StackPanel>

            <!-- Buttons - right-aligned, minimal width -->
            <ItemsControl Grid.Row="2" Grid.Column="1"
                          ItemsSource="{Binding Buttons}"
                          VerticalAlignment="Bottom"
                          HorizontalAlignment="Left"
                Margin="5,0,0,55">
                <!-- Small left margin to avoid touch -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <c:ButtonControl 
                            Label="{Binding Label}"
                            BtnContent="{Binding BtnContent}"
                            IsLit="{Binding IsLit}"
                            Channel="{Binding Channel}"
                            Note="{Binding Note}"
                            Margin="0,0,0,5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>