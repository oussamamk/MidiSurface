<UserControl x:Class="MidiSurface.Controls.ChannelStripControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:MidiSurface.Controls"
             MinWidth="120" MinHeight="400">

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="3" Padding="5">
        <Grid>
            <!-- Define 2 columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Main controls -->
                <ColumnDefinition Width="Auto"/>
                <!-- Buttons (just wide enough) -->
            </Grid.ColumnDefinitions>

            <!-- Define 3 rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Channel Name -->
                <RowDefinition Height="Auto"/>
                <!-- Knob + Label -->
                <RowDefinition Height="*"/>
                <!-- Fader + Label (takes remaining space) -->
            </Grid.RowDefinitions>

            <!-- === CHANNEL NAME (Row 0, Col 0) === -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="{Binding ChannelName}"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <!-- === KNOB (Row 1, Col 0) === -->
            <StackPanel Grid.Row="1" Grid.Column="0"
                        HorizontalAlignment="Center">
                <c:KnobControl
                    MinHeight="80" MinWidth="60"
                    Width="Auto" Height="Auto"
                    Minimum="{Binding KnobMinimum}"
                    Maximum="{Binding KnobMaximum}"
                    Value="{Binding KnobValue, Mode=TwoWay}"
                    Label="{Binding KnobLabel}"
                    Margin="0,0,0,15"/>
            </StackPanel>

            <!-- === FADER (Row 2, Col 0) === -->
            <StackPanel Grid.Row="2" Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch">
                <c:FaderControl
                    Width="Auto" Height="Auto"
                    Minimum="{Binding FaderMinimum}"
                    Maximum="{Binding FaderMaximum}"
                    Value="{Binding FaderValue, Mode=TwoWay}"
                    Label="{Binding FaderLabel}"
                    Margin="0,0,0,20"/>
            </StackPanel>

            <!-- === BUTTONS (Row 2, Col 1) === -->
            <ItemsControl Grid.Row="2" Grid.Column="1"
              ItemsSource="{Binding Buttons}"
              VerticalAlignment="Top"
              HorizontalAlignment="Center"
              Margin="10,0,0,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <c:ButtonControl 
                Label="{Binding Label}"
                IsLit="{Binding IsLit}"
                Margin="0,0,0,20"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>