<UserControl x:Class="MidiSurface.Controls.Fader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MidiSurface.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="40">
    <Slider x:Name="MyVerticalSlider" 
            Width="40" 
            Height="300" 
            Orientation="Vertical" 
            Minimum="0" 
            Maximum="127"
            Value="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Slider.Template>
            <ControlTemplate TargetType="Slider">
                <Grid>
                    <Rectangle Fill="DimGray" Width="5" RadiusX="2.5" RadiusY="2.5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                    <Track x:Name="PART_Track" VerticalAlignment="Stretch">
                        <Track.Thumb>
                            <Thumb Width="40" Height="20" Background="Black" BorderBrush="Gray" BorderThickness="1"/>
                        </Track.Thumb>
                        <Track.DecreaseRepeatButton>
                            <RepeatButton Command="Slider.DecreaseLarge" Style="{x:Null}" Opacity="0" IsHitTestVisible="False"/>
                        </Track.DecreaseRepeatButton>
                        <Track.IncreaseRepeatButton>
                            <RepeatButton Command="Slider.IncreaseLarge" Style="{x:Null}" Opacity="0" IsHitTestVisible="False"/>
                        </Track.IncreaseRepeatButton>
                    </Track>
                </Grid>
            </ControlTemplate>
        </Slider.Template>
    </Slider>
</UserControl>