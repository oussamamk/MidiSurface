<UserControl x:Class="MidiSurface.Controls.KnobControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MidiSurface.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="60">

    <Grid>
        <!-- Shared container that defines the knob size -->
        <Grid x:Name="KnobContainer" 
              Width="{Binding ActualWidth, ElementName=KnobBody}"
              Height="{Binding ActualHeight, ElementName=KnobBody}"
              VerticalAlignment="Top">

            <!-- Knob body -->
            <Ellipse x:Name="KnobBody"
                     Stroke="DimGray" StrokeThickness="2" Fill="Black" 
                     MinWidth="60" MinHeight="60" />

            <!-- Pointer: dynamically sized -->
            <Line x:Name="Pointer" 
                  Stroke="Red" StrokeThickness="3"
                  StrokeStartLineCap="Round" 
                  StrokeEndLineCap="Round">
                <Line.X1>
                    <MultiBinding Converter="{StaticResource KnobPointerConverter}" ConverterParameter="X1">
                        <Binding Path="ActualWidth" ElementName="KnobBody"/>
                        <Binding Path="ActualHeight" ElementName="KnobBody"/>
                    </MultiBinding>
                </Line.X1>
                <Line.Y1>
                    <MultiBinding Converter="{StaticResource KnobPointerConverter}" ConverterParameter="Y1">
                        <Binding Path="ActualWidth" ElementName="KnobBody"/>
                        <Binding Path="ActualHeight" ElementName="KnobBody"/>
                    </MultiBinding>
                </Line.Y1>
                <Line.X2>
                    <MultiBinding Converter="{StaticResource KnobPointerConverter}" ConverterParameter="X2">
                        <Binding Path="ActualWidth" ElementName="KnobBody"/>
                        <Binding Path="ActualHeight" ElementName="KnobBody"/>
                    </MultiBinding>
                </Line.X2>
                <Line.Y2>
                    <MultiBinding Converter="{StaticResource KnobPointerConverter}" ConverterParameter="Y2">
                        <Binding Path="ActualWidth" ElementName="KnobBody"/>
                        <Binding Path="ActualHeight" ElementName="KnobBody"/>
                    </MultiBinding>
                </Line.Y2>
                <Line.RenderTransform>
                    <RotateTransform x:Name="Rotation" 
                                     CenterX="{Binding ActualWidth, ElementName=KnobBody, Converter={StaticResource HalfConverter}}"
                                     CenterY="{Binding ActualHeight, ElementName=KnobBody, Converter={StaticResource HalfConverter}}"/>
                </Line.RenderTransform>
            </Line>
        </Grid>

        <!-- Label below the knob -->
        <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=local:KnobControl}}"
                   TextAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="10"
                   Margin="0,5,0,0"/>
    </Grid>
</UserControl>