<UserControl x:Class="MidiSurface.Controls.ButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             MinWidth="40" MinHeight="55">

    <Border Background="{Binding IsLit, ElementName=Root, Converter={StaticResource BoolToBrushConverter}}"
            BorderBrush="Gray" BorderThickness="1" CornerRadius="3"
            Padding="2">
        <Grid HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Button surface (small square) -->
            <Rectangle Grid.Row="0"
                       Width="15" Height="15"
                       Fill="DarkGray"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"/>

            <!-- Label below button -->
            <TextBlock Grid.Row="1"
                       Text="{Binding Label, ElementName=Root}"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="Wrap"
                       FontSize="12"
                       FontWeight="Normal"
                       HorizontalAlignment="Center"
                       VerticalAlignment="top"
                       TextAlignment="Center"
                       MaxWidth="70"
                       MinWidth="70"
                       Margin="0,2,0,0"/>
        </Grid>
    </Border>
</UserControl>