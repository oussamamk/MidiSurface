<UserControl x:Class="MidiSurface.Controls.ChannelStrip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:MidiSurface.Controls"
             Width="130" Height="450">

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="3" Padding="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Main strip -->
                <ColumnDefinition Width="Auto"/>
                <!-- Buttons -->
            </Grid.ColumnDefinitions>

            <!-- === MAIN STRIP: Everything centered on one axis === -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <!-- Channel Name -->
                <TextBlock x:Name="ChannelNameTextBlock"
                           Text="CH 1"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,10" TextAlignment="Center"/>

                <!-- Knob + "Pan" Label -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,8">
                    <c:Knob x:Name="KnobControl"
                            Width="60" Height="60"
                            Minimum="0" Maximum="127"
                            Value="63" Margin="0,0,0,4"/>
                    <TextBlock x:Name="KnobLabel" TextAlignment="Center"
                               Text="Pan"
                               FontSize="11"
                               Foreground="Black"
                               />
                </StackPanel>

                <!-- Fader + "Volume" Label -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <c:Fader x:Name="FaderControl"
                             Width="40" Height="260"
                             Value="20" Margin="0,0,0,20"/>
                    <TextBlock x:Name="FaderLabel"
                               Text="Volume"
                               FontSize="11"
                               Foreground="Black" TextAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- === BUTTONS (to the right) === -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Top"
                        Margin="-10,130,0,0">
                <!-- Adjust top margin to align with fader top -->
                <Button x:Name="Button1" Content="M" Width="35" Height="35" Margin="10"/>
                <Button x:Name="Button2" Content="S" Width="35" Height="35" Margin="10"/>
                <Button x:Name="Button3" Content="A" Width="35" Height="35" Margin="10"/>
                <Button x:Name="Button4" Content="R" Width="35" Height="35" Margin="10"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>