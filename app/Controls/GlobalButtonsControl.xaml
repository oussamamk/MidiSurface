<UserControl x:Class="MidiSurface.Controls.GlobalButtonsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:MidiSurface.Controls"
             Margin="0,0,0,0">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="0"/>
            <RowDefinition MaxHeight="80"/>
            <RowDefinition MaxHeight="80"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Row 0 -->
        <c:ButtonControl Grid.Row="1" Grid.Column="0" 
                         Label="{Binding Buttons[0].Label}"
                         BtnContent="{Binding Buttons[0].BtnContent}"
                         IsLit="{Binding Buttons[0].IsLit}"
                         Channel="{Binding Buttons[0].Channel}"
                         Note="{Binding Buttons[0].Note}" Margin="0,0,5,0" MaxHeight="70" MinHeight="70" VerticalAlignment="Center"/>
        <c:ButtonControl Grid.Row="1" Grid.Column="1" 
                         Label="{Binding Buttons[1].Label}"
                         BtnContent="{Binding Buttons[1].BtnContent}"
                         IsLit="{Binding Buttons[1].IsLit}"
                         Channel="{Binding Buttons[1].Channel}"
                         Note="{Binding Buttons[1].Note}" Margin="0,0,5,0" MaxHeight="70" MinHeight="70"/>
        <c:ButtonControl Grid.Row="1" Grid.Column="2" 
                         Label="{Binding Buttons[2].Label}"
                         BtnContent="{Binding Buttons[2].BtnContent}"
                         IsLit="{Binding Buttons[2].IsLit}"
                         Channel="{Binding Buttons[2].Channel}"
                         Note="{Binding Buttons[2].Note}" Margin="0,0,5,0" MaxHeight="70" MinHeight="70"/>

        <!-- Row 1 -->
        <c:ButtonControl Grid.Row="2" Grid.Column="0" 
                         Label="{Binding Buttons[3].Label}"
                         BtnContent="{Binding Buttons[3].BtnContent}"
                         IsLit="{Binding Buttons[3].IsLit}"
                         Channel="{Binding Buttons[3].Channel}"
                         Note="{Binding Buttons[3].Note}" Margin="0,0,5,0" MaxHeight="70" MinHeight="70"/>
        <c:ButtonControl Grid.Row="2" Grid.Column="1" 
                         Label="{Binding Buttons[4].Label}"
                         BtnContent="{Binding Buttons[4].BtnContent}"
                         IsLit="{Binding Buttons[4].IsLit}"
                         Channel="{Binding Buttons[4].Channel}"
                         Note="{Binding Buttons[4].Note}" Margin="0,0,5,0" MaxHeight="70" MinHeight="70"/>
        <c:ButtonControl Grid.Row="2" Grid.Column="2" 
                         Label="{Binding Buttons[5].Label}"
                         BtnContent="{Binding Buttons[5].BtnContent}"
                         IsLit="{Binding Buttons[5].IsLit}"
                         Channel="{Binding Buttons[5].Channel}"
                         Note="{Binding Buttons[5].Note}" Margin="0,0,5,0" MaxHeight="70" MinHeight="70"/>
    </Grid>
</UserControl>