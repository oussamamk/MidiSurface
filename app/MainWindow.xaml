<Window x:Class="MidiSurface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:MidiSurface.Controls"
        xmlns:vm="clr-namespace:MidiSurface.ViewModels"
        Title="MIDI Surface" Height="600" Width="1000">
    <Viewbox Stretch="Uniform">
        <Border Padding="0">
            <!-- Remove padding if you want max width -->
            <ItemsControl ItemsSource="{Binding Devices}"
                          HorizontalContentAlignment="Stretch"
                          VerticalContentAlignment="Top">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" Margin="0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:DeviceViewModel}">
                        <c:DeviceStripRow
                            Strips="{Binding Strips}" 
                            GlobalButtons="{Binding CButtons}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Viewbox>
</Window>